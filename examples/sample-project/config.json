{
  "input_dir": "./examples/sample-project",
  "output_dir": "./examples/output",
  "filename": "sample-project-code.docx",
  "file_extensions": [
    ".py", ".js", ".java", ".cpp", ".c", ".h", 
    ".html", ".css", ".ts", ".jsx", ".tsx", ".vue", 
    ".php", ".go", ".rs", ".rb", ".swift", ".kt", ".cs",
    ".sql", ".xml", ".json", ".yaml", ".yml", ".md", ".txt"
  ],
  "exclude_dirs": [
    "node_modules", "__pycache__", ".git", "dist", "build", 
    "target", "bin", "obj", "vendor", ".vscode", ".idea"
  ],
  "exclude_files": [
    "*.min.js", 
    "*.min.css", 
    "package-lock.json", 
    "yarn.lock"
  ],
  "max_file_size": "1MB",
  "max_pages": 20,
  "add_line_numbers": true,
  "document_title": "示例项目代码文档"
}